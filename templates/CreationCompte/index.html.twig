{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}
{% block body %}
    
   
    </br>
<div class="container">
    <div class="InscriptionBox">
        <div>
        <h2> Remplissez ce formulaire afin de vous créer un compte ! </h2>
        </div>
    {{form_start(form)}}
        <div class="InscriptionBoxInput form-floating mb-3">
            {{ form_widget(form.numLicence, {'attr': {'placeholder': 'Numéro de Licence - 11 chiffres'}}) }}
            {{ form_label(form.numLicence, 'Numéro de Licence') }}
        </div>
        <div class="InscriptionBoxInput form-floating mb-3"> 
            {{ form_widget(form.Email, {'attr': {'placeholder': 'Email'}}) }}
            {{ form_label(form.Email, 'Email') }}
        </div>
        <div class="InscriptionBoxInput form-floating mb-3">
            {{ form_widget(form.password, {'attr': {'placeholder': 'Mot de passe'}}) }}
            {{ form_label(form.password, 'Mot de passe') }}
        </div>
        <div class="InscriptionBoxInput form-floating mb-3">
            {{ form_widget(form.confPassword, {'attr': {'placeholder': 'Confirmer le mot de passe'}}) }}
            {{ form_label(form.confPassword, 'Confirmer le mot de passe') }}
        </div>
        </br>
    
            <button type='submit' class='btn btn-success'>Demande d'enregistrement</button>
    </div> 
    {{form_end(form)}}
</div>
            
{% endblock %}