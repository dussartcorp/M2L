			<script src="{{ asset('javaScript/inscription.js') }}"></script>

		{% endblock %}
	</head>
	<header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<a class="navbar-brand" href="{{path('home')}}">
			<img src="{{asset('images/m2l.png')}}" width="30" height="30" alt=""/></a>
			<button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="navbar-collapse collapse" id="navbarColor03" style="">
				<ul class="navbar-nav mr-auto">
							<li class="nav-item active">
								<a class="nav-link" href="{{path('home')}}">
									Accueil
								</a>
							</li>
					
					{% if app.user %}
						{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SUPER') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('congres_atelier') }}">Congrès</a>
							</li>
						{% endif %}
						{% if is_granted('ROLE_INSCRIT') or is_granted('ROLE_SUPER') or is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('inscription_sejour') }}">Séjour</a>
							</li>
						{% endif %}
						<li class="nav-item">
						<a class="nav-link" href="{{path('app_logout')}}">Déconnexion
							<span class="sr-only">(current)</span>
						</a>
						</li>
						{% else %}
						<li class="nav-item">
						<a class="nav-link" href="{{path('app_login')}}">Connexion
							<span class="sr-only">(current)</span>
						</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('creation_compte') }}">Inscription</a>
						</li>
					{% endif %}
				</div>
			</li>
		</ul>
	</div>
</nav>
</header>
<body>
{% for message in app.flashes('warning') %}
	<div class="alert alert-danger" style="margin: 0 !important" role="alert">
		{{ message }}
	</div>
{% endfor %}
{% for message in app.flashes('success') %}
	<div class="alert alert-success" style="margin: 0 !important" role="alert">
		{{ message }}
	</div>
{% endfor %}

{% block body %}
{# {{app.flashes}} #}

