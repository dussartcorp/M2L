{% extends 'base.html.twig' %}

{% block title %} Créer un atelier{% endblock %}

{% block body %}

<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />


  <div class="container" style="padding-top: 10px;padding-bottom: 10px;">
    <h1 class="text-center">Création d'un nouvel atelier :</h1>
    {{ form_start(form)}}
    <div class="form-row">
      <div class="form-group col-md-6" id="some-custom-id">
        {{ form_label(form.libelle, 'Libellé de l\'atelier') }}
        {{ form_widget(form.libelle, { 'attr' :{'placeholder': 'Saisir le libellé de l\'atelier', 'class': "form-control"}}) }}
      </div>
      <div class="form-group col-md-6" id="some-custom-id">
        {{ form_label(form.nbPlaceMaxi, 'Nombres de places maximum') }}
        {{ form_widget(form.nbPlaceMaxi, {'attr': {'placeholder': 'Saisir le nombre de places', 'class': "form-control"}}) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-6" id="some-custom-id">
        {{ form_label(form.themes, 'Thèmes') }}
        {{ form_widget(form.themes) }}
      </div>
      <div class="col-md-3 ml-auto" id="some-custom-id">
        {{ form_label(form.vacations, 'Horaire') }}
        {{ form_widget(form.vacations) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-3">
        <button onclick="ouvertureModalTheme" class="btn btn-info">Ajouter un thème</button>
      </div>
      <div class="col-md-3 ml-auto">
        <button onclick="ouvertureModalHoraire" class="btn btn-info">Ajouter un horaire</button>
      </div>
    </div>
    <br>
    <button type="submit" class="btn btn-success">Créer</button>
  </div>
  {{ form_end(form) }}
			
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
  $(document).ready(function(){
    $('.select_themes').select2();
  });
</script>

{% endblock %}
