{% extends 'base.html.twig' %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}

			{% if app.user.activationtoken %}
				<div class="alert alert-danger">Votre compte n'a pas encore été activé, veuillez vérifier vos mails afin de l'activer.</div>
			{% endif %}

			{% if not app.user.activationtoken %}
				<div class="mb-3">
					Vous êtes connecté en tant que 
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">Déconnexion</a>
				</div>
			{% endif %}

		{% endif %}


		<div class="container">
			<div class="InscriptionBox">
				<h1 class="h3" id="loginH1">Veuillez vous connecter</h1>

				<label for="inputNumLicence">Numéro de licence</label>

				<input type="text" value="{{ last_username }}" name="numLicence" id="inputNumLicence" placeholder="Entrez votre numéro de licence" class="form-control col-5" required autofocus>

				<label for="inputPassword">Mot de passe</label>

				<input type="password" name="password" id="inputPassword" placeholder="Entrez votre mot de passe" class="form-control col-5" required>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<a style="font-size: 0.9em" href="/mdpOublie">Mot de passe oublié ?</a>
			</div>
			<div id="loginBtn">
				<button class="btn btn-lg btn-primary" style="margin: 0 10px" type="submit">Connexion</button>
			</div>
		</div>

	</form>
{% endblock %}
