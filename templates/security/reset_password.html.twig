{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<form method="post">
			<div class="InscriptionBox">
				<h1 class="h3" id="loginH1">Entrez votre nouveau mot de passe</h1>

				<label for="inputNumLicence">Mot de passe</label>

				<input type="password" name="password" id="password" placeholder="Entrez votre nouveau mot de passe" class="form-control col-5" required autofocus>

                <input type="hidden" name="token" value="{{ token }}">
			</div>
			<div id="loginBtn">
				<button class="btn btn-lg btn-primary" style="margin: 0 10px" type="submit">Valider</button>
			</div>
		</div>
	</form>
{% endblock %}